{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "import/no-extraneous-dependencies": [
            "error",
            { "devDependencies": true }
        ],
        
        "react/jsx-props-no-spreading": "off",
        "jsx-a11y/label-has-associated-control": "off"
    }
}
